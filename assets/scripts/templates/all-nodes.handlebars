<table class="files-table" id="file-table">
  <thead>
    <tr>
      <th data-field="name">File Name</th>
      <th data-field="modified">Last Modified</th>
      <th data-field="path">Path</th>
      <th>
    </tr>
  </thead>
  <tbody>
    {{#files}}
      <tr class="all-files-row">
        <td><a href="#" data-type="{{this.type}}">{{this.name}}</a></td>
        <td>{{this.updated_at}}</td>
        <td><button type="button" class="btn btn-success edit-tags" data-toggle="modal" data-target="#edit-tags-modal" data-id="{{this._id}}" ><span class="glyphicon glyphicon-tags"></span> Edit Tags</button></td>
        <td><button type="button" class="btn btn-trash delete-file" data-toggle="modal" data-target="#delete-file-modal" data-id="{{this._id}}" ><span class="glyphicon glyphicon-trash"></span> Delete File</button></td>
      </tr>
    {{/files}}
  </tbody>
</table>
